body
  .kpicss_bg-img
    nav.navbar.navbar-expand-lg.navbar-light
      a.navbar-brand(href='/').text-light
        img(src='images/ath_icon2.png', alt='Atheios API - Access the Atheios blockchain').align-middle
        | Atheios API | #{version}
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.nav.navbar-nav.ml-auto
          li.nav-item.active.text-light
            a.h5.nav-link(href='/').text-light
              | Home
              span.sr-only (current)
          li.nav-item.dropdown
            a#navbarDropdown.h5.nav-link.text-light.dropdown-toggle(href='/', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              | Atheios links
            .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
              a.dropdown-item.disabled(href='https://api.atheios.org') Atheios API
              .dropdown-divider
              a.dropdown-item(href='https://www.atheios.org') Atheios website
              a.dropdown-item(href='https://explorer.atheios.org') Atheios explorer
              a.dropdown-item(href='https://stats.atheios.org') Atheios statistics
              .dropdown-divider
              a.dropdown-item(href='https://bloxxchain.atheios.org') Bloxxchain
  .container-fluid
    .row
      .col.bd-sidebar
        nav#bd-docs-nav.collapse.bd-links
          .bd-toc-item.active
            a.bd-toc-link(href="#")
              | API
            ul.nav.bd-sidenav
              li
                a(href='/') API documentation
              li
                a(href='currentSupply') currentSupply
              li
                a(href='getBlockNumber') getBlockNumber
              li
                a(href='getEpoch') getEpoch
              li
                a(href='getMonetaryPolicy') getMonetaryPolicy
              li
                a(href='getHashRate') getHashRate
              li
                a(href='getGas') getGas


      .col-8
          block content

